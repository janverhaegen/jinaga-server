{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [ "ES2019" ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*",
                "./types/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}